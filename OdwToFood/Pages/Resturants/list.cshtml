@page
@model OdwToFood.Pages.Resturants.ListModel
@{
}
<h1>@Model.Message</h1>

<div class="container">

    <div>
        <form  method="get">

            <div class="form-group">
                <div class="input-group">
                    <input asp-for="SearchTerm" type="search" class="form-control" value="" />
                    <span class="input-group">
                        <button class="btn btn-outline-primary">
                            Search
                        </button>
                    </span>
                </div>

            </div>


        </form>
    </div>
</div>

<table class="table table-bordered table-hover">

    @foreach (var item in Model.ResturantData)
    { 
    <tr>
        <td>   @item.Name </td>
        <td>   @item.Cuisine </td>
        <td>   @item.Location </td>
        <td>
            <a class="btn btn-info" asp-page="./Details"
               asp-route-Id="@item.Id"> Details</a>
        </td>
        <td>
            <a class="btn btn-outline-secondary" asp-page="./Edit"
               asp-route-Id="@item.Id"> Edit</a>
        </td>
    </tr>

    }
</table>
<a class="btn btn-primary" asp-page="./Edit">Add New </a>


<div>@Model.Message</div>